pico-8 cartridge // http://www.pico-8.com
version 36
__lua__
#include vector.lua
bsize = 8

p = {}
p.x = 2
p.y = 2
p.f = v_new(1, 0)
fov = 0.2

function _update()
  local dir = 0
  if (btn(0)) then dir=0.02 end
  if (btn(1)) then dir=-0.02 end

  if (dir != 0) then
    v_rotate(p.f, dir)
  end
end

function _draw()
  cls(0)
  for x=0,127 do
    for y=0, 63 do
      m = mget(x,y)
      if (m > 0) then   
        draw_square(x*bsize, y*bsize, bsize, m)
      end
    end
  end

  local vr = v_new(p.f.x, p.f.y)
  v_rotate(vr, fov/2)
  --cast_ray(p.x, p.y, vr, 0.1, 5, 11)
  for v = 0, 127 do 
    v_rotate(vr, -fov/128)
    hit = cast_ray(p.x, p.y, vr, 0.1, 5, 2)
    if (hit.cell > 0) then
      pset(hit.x, hit.y, 11)
    end
  end
  

  --cast_ray(p.x, p.y, p.f, 0.1, 5, 8)
end

function cast_ray(px, py, v, step, dist, c)
  local hit = {}
  hit.dist = dist
  hit.cell = 0
  hit.x = -1
  hit.y = -1

  local t = 0
  while t < dist do
    t = t + step
    local x = px + v.x * t
    local y = py + v.y * t

    if mget(x, y) != 0 then
      return mget(x, y)
      hit.dist = t
      hit.cell = mget(x, y)
      hit.x = x
      hit.y = y
      return hit
    end
  end

  return hit
end

function draw_square(x, y, w, c)
  w = w - 1
  for i = x, x + w do
    for j = y, y + w do
      pset(i, j, c)
    end
  end
end
