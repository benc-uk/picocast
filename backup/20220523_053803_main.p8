pico-8 cartridge // http://www.pico-8.com
version 36
__lua__
#include vector.lua
bsize = 8

p = {}
p.x = 2
p.y = 2
p.f = {}
p.f.x = 1
p.f.y = 0
fov = 0.2

function _update()
  local dir = 0
  if (btn(0)) then dir=0.02 end
  if (btn(1)) then dir=-0.02 end

  if (dir == 0) then
    return
  end
 
  rotate_v(p.f, dir)
end

function _draw()
  cls(0)
  for x=0,127 do
    for y=0, 63 do
      m = mget(x,y)
      if (m > 0) then   
        draw_square(x*bsize, y*bsize, bsize, m)
      end
    end
  end

  local vr = v_new(p.f.x, p.f.y)
  rotate_v(vr, fov/2)
  cast_ray(p.x, p.y, vr, 0.1, 5, 11)
  for v=0,127 do 
    v_rotate(vr, -fov/128)
  end
  cast_ray(p.x, p.y, vr, 0.1, 5, 2)

  cast_ray(p.x, p.y, p.f, 0.1, 5, 8)
end

function cast_ray(px, py, v, step, dist, c)
  c = c or 7
  local t = 0
  while t < dist do
    t = t + step
    local x = px + v.x * t
    local y = py + v.y * t

    if mget(x, y) != 0 then
      return mget(x, y)
    else
      pset(x*bsize, y*bsize, c)
    end
  end
end

function draw_square(x, y, w, c)
  for i=x,x+w-1 do
    for j=y,y+w-1 do
      pset(i, j, c)
    end
  end
end
