pico-8 cartridge // http://www.pico-8.com
version 36
__lua__
px = 1
py = 1
fx = 0.5
fy = 0.5
bsize = 1

print("px:"..px)
print("py:"..py)

function _draw()
  cls(6)
  for x=0,127 do
    for y=0, 63 do
      m = mget(x,y)
      draw_square(x*bsize, y*bsize, bsize, m)
    end
  end

  --draw_square(px*bsize, py*bsize, bsize, 8)
  cast_ray(px, py, fx, fy, 0.1, 17)
end

function cast_ray(px, py, dx, dy, step, dist)
  local t = 0
  while t < dist do
    t = t + step
    x = px + dx * t
    y = py + dy * t
    if mget(x, y) != 0 then
      return mget(x, y)
    else
      pset(x, y, 7)
    end
  end
end


function draw_square(x, y, w, c)
  for i=x,x+w-1 do
    for j=y,y+w-1 do
      pset(i, j, c)
    end
  end
end
