pico-8 cartridge // http://www.pico-8.com
version 36
__lua__
#include vector.lua
bsize = 8

p = {}
p.x = 2
p.y = 2
p.f = v_new(1, 0)
fov = 0.1
view_dist = 12
ray_step = 0.1

function _update()
  local dir = 0
  local speed = 0
  if (btn(0)) then dir=0.01 end
  if (btn(1)) then dir=-0.01 end
  if (btn(2)) then speed=0.1 end
  if (btn(3)) then speed=-0.1 end

  if (dir != 0) then
    v_rotate(p.f, dir)
  end

  if (speed != 0) then
    local px = p.x + p.f.x * speed
    local py = p.y + p.f.y * speed
    if (mget(px, py) == 0) then
      p.x = px
      p.y = py
    end
  end
end

function _draw()
  cls(1)

  local vr = v_new(p.f.x, p.f.y)
  v_rotate(vr, fov/2)
  for v = 0, 127 do 
    hit = cast_ray(p.x, p.y, vr, ray_step, view_dist)
    if (hit.cell > 0) then
      pset(hit.x*bsize, hit.y*bsize, hit.dist*2)
      draw_wall_column(v, hit.dist, 5)
    else
      draw_wall_column(v, view_dist, 0)
    end
    v_rotate(vr, -fov/128)
  end
  pset(p.x*bsize, p.y*bsize, 12)
  cast_ray(p.x, p.y, p.f, ray_step, view_dist, true)

  -- for x=0,127 do
  --   for y=0, 63 do
  --     m = mget(x,y)
  --     if (m > 0) then   
  --       draw_square(x*bsize, y*bsize, bsize, m)
  --     end
  --   end
  -- end

  for x=0,127 do
    pset(x, 64, 12)
  end
end

function draw_wall_column(x, dist, cell)
  local ch = 128/dist
  line(x, 64 - ch, x, 64 + ch, cell)
end

function cast_ray(px, py, v, step, dist, draw)
  draw = draw or false
  local hit = {}
  hit.dist = dist
  hit.cell = 0
  hit.x = -1
  hit.y = -1

  local t = 0
  while t < dist do
    t = t + step
    local x = px + v.x * t
    local y = py + v.y * t
    if(draw) then
      pset(x*bsize, y*bsize, 11)
    end

    if mget(x, y) != 0 then
      hit.dist = t
      hit.cell = mget(x, y)
      hit.x = x
      hit.y = y
      return hit
    end
  end

  return hit
end

function draw_square(x, y, w, c)
  w = w - 1
  for i = x, x + w do
    for j = y, y + w do
      pset(i, j, c)
    end
  end
end
